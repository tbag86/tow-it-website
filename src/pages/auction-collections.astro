<style is:global>
  .ac-hero-section { padding: 80px 24px 60px; position: relative; overflow: hidden; }
  .ac-hero-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 64px; align-items: center; max-width: 1280px; margin: 0 auto; }
  .ac-stats-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 16px; }
  .ac-hero-img { position: absolute; top: 0; left: 0; width: 100%; height: 100%; object-fit: cover; object-position: center; opacity: 0.13; pointer-events: none; z-index: 0; }
  .ac-hero-content { position: relative; z-index: 1; }
  .ac-pain-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 40px; align-items: center; }
  .ac-steps-grid { display: grid; grid-template-columns: repeat(3, 1fr); gap: 24px; }
  .ac-benefits-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 24px; }
  .ac-auction-houses-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(220px, 1fr)); gap: 20px; }
  .ac-cta-section { padding: 80px 24px; position: relative; overflow: hidden; }
  @media (max-width: 768px) {
    .ac-hero-section { padding: 48px 20px 40px !important; }
    .ac-hero-grid { grid-template-columns: 1fr !important; gap: 36px !important; }
    .ac-stats-grid { grid-template-columns: 1fr 1fr !important; gap: 12px !important; }
    .ac-pain-grid { grid-template-columns: 1fr !important; gap: 28px !important; }
    .ac-steps-grid { grid-template-columns: 1fr !important; gap: 16px !important; }
    .ac-benefits-grid { grid-template-columns: 1fr !important; }
    .ac-auction-houses-grid { grid-template-columns: 1fr 1fr !important; gap: 14px !important; }
    .ac-cta-section { padding: 60px 20px !important; }
  }
</style>

